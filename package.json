{
  "name": "@diplodoc/page-constructor-extension",
  "version": "0.0.0",
  "description": "Page constructor plugin for Diplodoc transformer and builder",
  "main": "build/plugin/index.js",
  "types": "build/plugin/index.d.ts",
  "engines": {
    "node": ">=18",
    "npm": ">=9.*"
  },
  "exports": {
    ".": {
      "types": "./build/plugin/index.d.ts",
      "default": "./build/plugin/index.js"
    },
    "./plugin": {
      "node": "./build/plugin/index-node.js",
      "default": "./build/plugin/index.js",
      "style": "./build/plugin/index.css"
    },
    "./react": "./build/react/index.js",
    "./plugin/style": "./build/plugin/index.css",
    "./roo": {
      "node": "./build/plugin_roo/index.js",
      "default": "./build/plugin_roo/index.js"
    },
    "./roo/react": "./build/react_roo/index.js"
  },
  "typesVersions": {
    "*": {
      "index.d.ts": [
        "./build/plugin/index.d.ts"
      ],
      "plugin": [
        "./build/plugin/index.d.ts"
      ],
      "runtime": [
        "./build/runtime/index.d.ts"
      ],
      "react": [
        "./build/react/index.d.ts"
      ],
      "roo": [
        "./build/plugin_roo/index.d.ts"
      ],
      "roo/react": [
        "./build/react_roo/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "rm -rf build && run-p build:*",
    "build:js": "./esbuild/build.js",
    "build:declarations": "tsc --emitDeclarationOnly --outDir ./build",
    "build:roo": "./esbuild/build_roo.js",
    "prepublishOnly": "npm run build",
    "test": "exit 0",
    "lint": "lint update && lint",
    "lint:fix": "lint update && lint fix",
    "pre-commit": "lint update && lint-staged",
    "prepare": "husky"
  },
  "keywords": [
    "page-constructor",
    "markdown-it"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "build"
  ],
  "peerDependencies": {
    "markdown-it": "^13.0.0",
    "react": "^16.8.0  || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@diplodoc/lint": "^1.1.3",
    "@diplodoc/transform": "^4.7.2",
    "@diplodoc/tsconfig": "^1.0.2",
    "@types/markdown-it": "^13.0.9",
    "@types/node": "^20.3.2",
    "@types/react": "^18.0.35",
    "esbuild": "^0.23.1",
    "esbuild-inline-sass": "^0.4.1",
    "jest": "^29.5.0",
    "markdown-it": "^13.0.2",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@gravity-ui/page-constructor": "^5.28.5",
    "cheerio": "^1.0.0",
    "ts-dedent": "^2.2.0"
  }
}

